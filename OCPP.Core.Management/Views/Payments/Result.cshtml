@model OCPP.Core.Management.Models.PaymentResultViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    var title = Localizer["PaymentStatusTitle"];
    var heading = Localizer["PaymentStatusHeading"];
    var back = Localizer["ReturnToDashboard"];
    ViewData["Title"] = title.IsResourceNotFound ? "Payment status" : title.Value;
    string headingText = heading.IsResourceNotFound ? "Payment status" : heading.Value;
    string backText = back.IsResourceNotFound ? "Back to dashboard" : back.Value;
    var isPublic = !string.IsNullOrWhiteSpace(Model.Origin) && Model.Origin.Equals("public", StringComparison.OrdinalIgnoreCase);
    if (isPublic)
    {
        backText = "Start a new session";
    }
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">@headingText</h4>
            <p class="card-text">@Model.Message</p>
            <a href="@(string.IsNullOrWhiteSpace(Model.ReturnUrl) ? Url.Action("Index", "Home") : Model.ReturnUrl)" class="btn btn-primary">@backText</a>
        </div>
    </div>
</div>
