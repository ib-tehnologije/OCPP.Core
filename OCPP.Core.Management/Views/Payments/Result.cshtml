@model OCPP.Core.Management.Models.PaymentResultViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    var title = Localizer["PaymentStatusTitle"];
    var heading = Localizer["PaymentStatusHeading"];
    var back = Localizer["ReturnToDashboard"];
    string titleText = title.Name == title.Value ? "Payment status" : title.Value;
    string headingText = heading.Name == heading.Value ? "Payment status" : heading.Value;
    string backText = back.Name == back.Value ? "Back to dashboard" : back.Value;
    ViewData["Title"] = titleText;
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title mb-3">@headingText</h4>
            <p class="card-text">@Model.Message</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">@backText</a>
        </div>
    </div>
</div>
