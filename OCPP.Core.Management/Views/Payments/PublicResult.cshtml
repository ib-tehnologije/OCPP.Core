@model OCPP.Core.Management.Models.PaymentResultViewModel
@{
    Layout = null;
    var heading = Model.Success ? "Payment authorized" : "Payment status";
    var message = Model.Message ?? (Model.Success ? "Charging session will start shortly." : "Something went wrong.");
    var cta = "Start a new session";
    var returnUrl = string.IsNullOrWhiteSpace(Model.ReturnUrl) ? Url.Action("Start", "Public") : Model.ReturnUrl;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@heading</title>
    <style>
        :root {
            --bg: #0b1021;
            --panel: rgba(17,24,39,0.85);
            --accent: #6ddcff;
            --accent-2: #7f5af0;
            --text: #e5e7eb;
            --muted: #9ca3af;
            --border: rgba(255,255,255,0.08);
        }
        body {
            margin: 0;
            min-height: 100vh;
            background: radial-gradient(circle at 15% 20%, rgba(127,90,240,0.22), transparent 35%),
                        radial-gradient(circle at 80% 10%, rgba(109,220,255,0.25), transparent 30%),
                        radial-gradient(circle at 60% 80%, rgba(109,220,255,0.12), transparent 35%),
                        var(--bg);
            font-family: 'Inter', 'Space Grotesk', system-ui, -apple-system, sans-serif;
            color: var(--text);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 32px 16px;
        }
        .card {
            width: min(720px, 100%);
            background: var(--panel);
            border: 1px solid var(--border);
            border-radius: 18px;
            padding: 32px;
            box-shadow: 0 25px 60px rgba(0,0,0,0.35);
        }
        h1 { margin: 0 0 8px; letter-spacing: -0.01em; }
        p { margin: 0; color: var(--muted); }
        .status {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 6px 12px;
            border-radius: 999px;
            background: linear-gradient(120deg, rgba(109,220,255,0.2), rgba(127,90,240,0.2));
            border: 1px solid rgba(255,255,255,0.08);
            margin-bottom: 14px;
        }
        .dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
        }
        .cta {
            margin-top: 20px;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 12px 18px;
            border-radius: 12px;
            border: none;
            background: linear-gradient(120deg, var(--accent), var(--accent-2));
            color: #0b1021;
            font-weight: 700;
            cursor: pointer;
            text-decoration: none;
            box-shadow: 0 10px 30px rgba(109,220,255,0.35);
            transition: transform 0.1s ease, box-shadow 0.2s ease;
        }
        .cta:hover { transform: translateY(-1px); box-shadow: 0 14px 34px rgba(109,220,255,0.45); }
    </style>
</head>
<body>
    <div class="card">
        <div class="status">
            <span class="dot" style="background:@(Model.Success ? "#52ffa8" : "#ff4b6d"); box-shadow:0 0 12px @(Model.Success ? "rgba(82,255,168,0.9)" : "rgba(255,75,109,0.7)");"></span>
            <span>@heading</span>
        </div>
        <h1>@heading</h1>
        <p>@message</p>
        <a class="cta" href="@returnUrl">
            <span>@cta</span>
            <span aria-hidden="true">â†’</span>
        </a>
    </div>
</body>
</html>
