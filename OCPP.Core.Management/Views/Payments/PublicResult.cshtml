@model OCPP.Core.Management.Models.PaymentResultViewModel
@inject Microsoft.Extensions.Configuration.IConfiguration Config
@{
    Layout = null;
    var heading = Model.Success ? "Payment authorized" : "Payment status";
    var message = Model.Message ?? (Model.Success ? "Charging session will start shortly." : "Something went wrong.");
    var cta = "Start a new session";
    var returnUrl = string.IsNullOrWhiteSpace(Model.ReturnUrl) ? Url.Action("Start", "Public") : Model.ReturnUrl;
    var brandName = Config["PublicPortal:BrandName"] ?? "OCPP Core";
    var brandTagline = Config["PublicPortal:Tagline"] ?? "Fast charging locations for your EV.";
    var badgeClass = Model.Success ? "available" : "error";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@heading</title>
    <link rel="stylesheet" href="~/css/public-portal.css" />
</head>
<body class="public-portal">
    <nav class="public-session-nav" aria-label="Charging session states">
        <button type="button" class="active" disabled>‚ë† Start</button>
        <button type="button" disabled>‚ë° Wait</button>
        <button type="button" disabled>‚ë¢ Charge</button>
        <button type="button" disabled>‚ë£ Done</button>
        <button type="button" disabled>‚ë§ Error</button>
    </nav>
    <div class="lang-bar">
        <span class="lbl">üåê</span>
        <button type="button" class="lang-btn active">EN</button>
        <button type="button" class="lang-btn">HR</button>
        <button type="button" class="lang-btn">DE</button>
        <button type="button" class="lang-btn">IT</button>
    </div>

    <div class="page-wrap">
        <div class="card">
            <div class="brand-bar">
                <div class="brand-logo">‚ö°</div>
                <div class="brand-name">@brandName</div>
            </div>

            <div class="status-header">
                <div class="status-badge @badgeClass">
                    <span class="dot" style="@(Model.Success ? "animation:none;" : "")"></span>
                    <span>@heading</span>
                </div>
                <h1 class="charger-title">@heading</h1>
                <p class="charger-sub">@message</p>
            </div>

            <div class="divider"></div>

            <div class="form-section">
                <a class="btn-primary" href="@returnUrl">
                    <span>@cta</span>
                    <span class="arrow" aria-hidden="true">‚Üí</span>
                </a>
            </div>

            <div class="footer-note">Powered by <a href="@returnUrl">@brandName</a></div>
        </div>
    </div>
</body>
</html>
