@model OCPP.Core.Management.Models.PublicStartViewModel

@{
    Layout = null;
    ViewData["Title"] = "Start charging";
    var chargePointLabel = string.IsNullOrWhiteSpace(Model.ChargePointName)
        ? Model.ChargePointId
        : Model.ChargePointName;
    var connectorLabel = string.IsNullOrWhiteSpace(Model.ConnectorName)
        ? $"Connector {Model.ConnectorId}"
        : Model.ConnectorName;
}

<style>
    :root {
        --bg: #0b1021;
        --card: rgba(17, 24, 39, 0.78);
        --accent: #6ddcff;
        --accent-2: #7f5af0;
        --text: #e5e7eb;
        --muted: #9ca3af;
        --border: rgba(255,255,255,0.08);
    }
    body {
        margin: 0;
        padding: 0;
    }
    .public-start-page {
        min-height: calc(100vh - 40px);
        background: radial-gradient(circle at 10% 20%, rgba(127,90,240,0.22), transparent 35%),
                    radial-gradient(circle at 80% 10%, rgba(109,220,255,0.25), transparent 30%),
                    radial-gradient(circle at 50% 80%, rgba(109,220,255,0.15), transparent 30%),
                    var(--bg);
        color: var(--text);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 32px 16px 48px;
        font-family: 'Inter', 'Space Grotesk', system-ui, -apple-system, sans-serif;
    }
    .public-start-card {
        width: min(960px, 100%);
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 18px;
        box-shadow: 0 25px 60px rgba(0,0,0,0.35);
        overflow: hidden;
    }
    .public-start-top {
        padding: 28px 32px 20px;
        display: flex;
        gap: 18px;
        align-items: center;
        border-bottom: 1px solid var(--border);
    }
    .status-chip {
        padding: 6px 12px;
        border-radius: 999px;
        background: linear-gradient(120deg, rgba(109,220,255,0.2), rgba(127,90,240,0.2));
        border: 1px solid rgba(255,255,255,0.08);
        color: var(--text);
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    .status-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: #52ffa8;
        box-shadow: 0 0 12px rgba(82,255,168,0.9);
    }
    .public-start-body {
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        gap: 0;
    }
    .panel {
        padding: 24px 32px;
        border-right: 1px solid var(--border);
    }
    .panel:last-child {
        border-right: none;
    }
    .heading {
        margin: 0;
        font-size: 1.6rem;
        letter-spacing: -0.01em;
    }
    .subheading {
        color: var(--muted);
        margin: 6px 0 0;
    }
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 12px;
        margin: 18px 0 6px;
    }
    .info-tile {
        padding: 14px;
        border: 1px solid var(--border);
        border-radius: 12px;
        background: rgba(255,255,255,0.02);
    }
    .info-label {
        color: var(--muted);
        font-size: 0.85rem;
        margin-bottom: 4px;
    }
    .info-value {
        font-size: 1.05rem;
    }
    .form-block {
        margin-top: 12px;
    }
    .form-block label {
        display: block;
        margin-bottom: 8px;
        color: var(--muted);
    }
    .text-input {
        width: 100%;
        padding: 12px 14px;
        border-radius: 12px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,0.03);
        color: var(--text);
    }
    .helper {
        margin-top: 6px;
        color: var(--muted);
        font-size: 0.9rem;
    }
    .cta {
        margin-top: 18px;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 12px 18px;
        border-radius: 12px;
        border: none;
        background: linear-gradient(120deg, var(--accent), var(--accent-2));
        color: #0b1021;
        font-weight: 700;
        cursor: pointer;
        box-shadow: 0 10px 30px rgba(109,220,255,0.35);
        transition: transform 0.1s ease, box-shadow 0.2s ease;
    }
    .cta:hover { transform: translateY(-1px); box-shadow: 0 14px 34px rgba(109,220,255,0.45); }
    .cta:disabled { opacity: 0.6; cursor: not-allowed; }
    .footnote {
        margin-top: 12px;
        color: var(--muted);
        font-size: 0.9rem;
    }
    .alert {
        margin: 12px 0 0;
        padding: 12px 14px;
        border-radius: 10px;
        background: rgba(255, 75, 109, 0.14);
        border: 1px solid rgba(255, 75, 109, 0.3);
        color: #ffd5e0;
    }
    @@media (max-width: 900px) {
        .public-start-body { grid-template-columns: 1fr; }
        .panel { border-right: none; border-top: 1px solid var(--border); }
        .panel:first-child { border-top: none; }
    }
</style>

<div class="public-start-page">
    <div class="public-start-card">
        <div class="public-start-top">
            <div>
                <p class="status-chip">
                    <span class="status-dot"></span>
                    Ready to start
                </p>
                <h1 class="heading">@chargePointLabel</h1>
                <p class="subheading">@connectorLabel</p>
            </div>
        </div>

        <div class="public-start-body">
            <div class="panel">
                <h3 class="heading" style="font-size:1.25rem;">Session details</h3>
                <div class="info-grid">
                    <div class="info-tile">
                        <div class="info-label">Charge point</div>
                        <div class="info-value">@chargePointLabel</div>
                    </div>
                    <div class="info-tile">
                        <div class="info-label">Connector</div>
                        <div class="info-value">@connectorLabel</div>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(Model.LastStatus))
                    {
                        <div class="info-tile">
                            <div class="info-label">Last status</div>
                            <div class="info-value">
                                @Model.LastStatus
                                @if (Model.LastStatusTime.HasValue)
                                {
                                    <span class="info-label" style="margin-left:6px;">@Model.LastStatusTime.Value.ToLocalTime().ToString("g")</span>
                                }
                            </div>
                        </div>
                    }
                    @if (Model.PricePerKwh > 0)
                    {
                        <div class="info-tile">
                            <div class="info-label">Price per kWh</div>
                            <div class="info-value">@Model.PricePerKwh.ToString("0.##") €</div>
                        </div>
                    }
                    @if (Model.UserSessionFee > 0)
                    {
                        <div class="info-tile">
                            <div class="info-label">Session fee</div>
                            <div class="info-value">@Model.UserSessionFee.ToString("0.##") €</div>
                        </div>
                    }
                    @if (Model.MaxSessionKwh > 0)
                    {
                        <div class="info-tile">
                            <div class="info-label">Max energy per session</div>
                            <div class="info-value">@Model.MaxSessionKwh.ToString("0.#") kWh</div>
                        </div>
                    }
                    @if (Model.ConnectorUsageFeePerMinute > 0)
                    {
                        <div class="info-tile">
                            <div class="info-label">Usage fee</div>
                            <div class="info-value">@Model.ConnectorUsageFeePerMinute.ToString("0.##") € / min</div>
                        </div>
                    }
                    @if (Model.StartUsageFeeAfterMinutes > 0)
                    {
                        <div class="info-tile">
                            <div class="info-label">Usage fee starts after</div>
                            <div class="info-value">@Model.StartUsageFeeAfterMinutes min</div>
                        </div>
                    }
                    @if (Model.MaxUsageFeeMinutes > 0)
                    {
                        <div class="info-tile">
                            <div class="info-label">Max usage fee time</div>
                            <div class="info-value">@Model.MaxUsageFeeMinutes min</div>
                        </div>
                    }
                </div>

                @if (Model.HasError)
                {
                    <div class="alert">@Model.ErrorMessage</div>
                }
            </div>

            <div class="panel">
                <h3 class="heading" style="font-size:1.2rem;">Start & pay</h3>
                <p class="subheading" style="margin-top:6px;">Authorize the session, then we’ll start the charger.</p>

                <form method="post" asp-action="Start" class="form-block">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="ChargePointId" value="@Model.ChargePointId" />
                    <input type="hidden" name="ConnectorId" value="@Model.ConnectorId" />

                    <label for="chargeTagId">Charge tag / RFID (optional)</label>
                    <input type="text" class="text-input" id="chargeTagId" name="ChargeTagId" value="@Model.ChargeTagId" placeholder="Have a card? Enter it here" @(Model.HasError ? "" : "autofocus") />
                    <div class="helper">Leave blank and we’ll create a one-time tag for this session.</div>

                    <button type="submit" class="cta" @(Model.HasError ? "disabled" : "")>
                        <span>Start and pay</span>
                        <span aria-hidden="true">→</span>
                    </button>

                    <div class="footnote">
                        You’ll be redirected to Stripe to reserve the maximum session amount. The charger must be online.
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
