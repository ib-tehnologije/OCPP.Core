@using Microsoft.AspNetCore.Mvc.Localization
@using System.Linq
@model ChargePointViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Title"];
    var selectedOwner = Model?.Owners?.FirstOrDefault(o => o.OwnerId == Model.OwnerId);
    var ownerDisplay = (selectedOwner != null && !string.IsNullOrWhiteSpace(selectedOwner.Email)) ? $"{selectedOwner.Name} ({selectedOwner.Email})" : selectedOwner?.Name;
    var ownerEmail = selectedOwner?.Email;
}
<br />

@if (Model != null)
{
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4>@Localizer["EditChargePoint"]</h4>
        <br />
        <div class="container">
            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="ChargePointId">@Localizer["ChargePointIdLabel"]</label>
                    </div>
                </div>
                @if (Model.CurrentId == "@")
                {
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input type="text" class="form-control" data-val="true" data-val-length="@string.Format(Localizer["FieldMaxLength"].Value, 100)" data-val-length-max="100" data-val-required="@Localizer["RequiredField"]" id="ChargePointId" maxlength="100" name="ChargePointId" placeholder="@Localizer["ChargePointIdPlaceholder"]" value="@Model.ChargePointId">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <span class="field-validation-valid text-danger" data-valmsg-for="ChargePointId" data-valmsg-replace="true"></span>
                    </div>
                }
                else
                {
                    <div class="col-sm-6">
                        <div class="form-group">
                            <input type="text" readonly class="form-control" id="ChargePointId" name="ChargePointId" placeholder="@Localizer["ChargePointIdPlaceholder"]" value="@Model.ChargePointId">
                        </div>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="Name">@Localizer["NameLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" data-val="true" data-val-length="@string.Format(Localizer["FieldMaxLength"].Value, 100)" data-val-length-max="100" data-val-required="@Localizer["RequiredField"]" id="Name" maxlength="100" name="Name" placeholder="@Localizer["NamePlaceholder"]" type="text" value="@Model.Name" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <span class="field-validation-valid text-danger" data-valmsg-for="Name" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="Comment">@Localizer["CommentLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" data-val="true" data-val-length="@string.Format(Localizer["FieldMaxLength"].Value, 200)" data-val-length-max="200" id="Comment" maxlength="200" name="Comment" placeholder="@Localizer["CommentPlaceholder"]" type="text" value="@Model.Comment" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <span class="field-validation-valid text-danger" data-valmsg-for="Comment" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="Description">@Localizer["DescriptionLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" data-val="true" data-val-length="@string.Format(Localizer["FieldMaxLength"].Value, 500)" data-val-length-max="500" id="Description" maxlength="500" name="Description" placeholder="@Localizer["DescriptionPlaceholder"]" type="text" value="@Model.Description" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <span class="field-validation-valid text-danger" data-valmsg-for="Description" data-valmsg-replace="true"></span>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="Username">@Localizer["UsernameLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" data-val="true" data-val-length="@string.Format(Localizer["FieldMaxLength"].Value, 50)" data-val-length-max="50" id="Username" maxlength="50" name="Username" placeholder="@Localizer["UsernamePlaceholder"]" type="text" value="@Model.Username" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <span class="field-validation-valid text-danger" data-valmsg-for="Username" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="Password">@Localizer["PasswordLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" data-val="true" data-val-length="@string.Format(Localizer["FieldMaxLength"].Value, 50)" data-val-length-max="50" id="Password" maxlength="50" name="Password" placeholder="@Localizer["PasswordPlaceholder"]" type="text" value="@Model.Password" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <span class="field-validation-valid text-danger" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="ClientCertThumb">@Localizer["ClientCertThumbLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input class="form-control" data-val="true" data-val-length="@string.Format(Localizer["FieldMaxLength"].Value, 100)" data-val-length-max="100" id="ClientCertThumb" maxlength="100" name="ClientCertThumb" placeholder="@Localizer["ClientCertThumbPlaceholder"]" type="text" value="@Model.ClientCertThumb" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <span class="field-validation-valid text-danger" data-valmsg-for="ClientCertThumb" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="FreeChargingEnabled">@Localizer["FreeChargingEnabledLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="FreeChargingEnabled" name="FreeChargingEnabled" value="true" @(Model.FreeChargingEnabled ? "checked" : "") />
                        <input type="hidden" name="FreeChargingEnabled" value="false" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="PricePerKwh">@Localizer["PricePerKwhLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input class="form-control" id="PricePerKwh" name="PricePerKwh" type="number" step="0.0001" min="0" value="@Model.PricePerKwh" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="UserSessionFee">@Localizer["UserSessionFeeLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input class="form-control" id="UserSessionFee" name="UserSessionFee" type="number" step="0.0001" min="0" value="@Model.UserSessionFee" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="OwnerSessionFee">@Localizer["OwnerSessionFeeLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input class="form-control" id="OwnerSessionFee" name="OwnerSessionFee" type="number" step="0.0001" min="0" value="@Model.OwnerSessionFee" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="MaxSessionKwh">@Localizer["MaxSessionKwhLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input class="form-control" id="MaxSessionKwh" name="MaxSessionKwh" type="number" step="0.1" min="0" value="@Model.MaxSessionKwh" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="OwnerCommissionPercent">@Localizer["OwnerCommissionPercentLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input class="form-control" id="OwnerCommissionPercent" name="OwnerCommissionPercent" type="number" step="0.0001" min="0" value="@Model.OwnerCommissionPercent" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="OwnerCommissionFixedPerKwh">@Localizer["OwnerCommissionFixedPerKwhLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input class="form-control" id="OwnerCommissionFixedPerKwh" name="OwnerCommissionFixedPerKwh" type="number" step="0.0001" min="0" value="@Model.OwnerCommissionFixedPerKwh" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="StartUsageFeeAfterMinutes">@Localizer["StartUsageFeeAfterMinutesLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input class="form-control" id="StartUsageFeeAfterMinutes" name="StartUsageFeeAfterMinutes" type="number" step="1" min="0" value="@Model.StartUsageFeeAfterMinutes" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="MaxUsageFeeMinutes">@Localizer["MaxUsageFeeMinutesLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input class="form-control" id="MaxUsageFeeMinutes" name="MaxUsageFeeMinutes" type="number" step="1" min="0" value="@Model.MaxUsageFeeMinutes" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="OwnerLookup">@Localizer["OwnerLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <input class="form-control" id="OwnerLookup" name="OwnerLookup" type="text" list="OwnerOptions" placeholder="@Localizer["OwnerPlaceholder"]" value="@ownerDisplay" autocomplete="off" />
                        <datalist id="OwnerOptions">
                            @if (Model.Owners != null)
                            {
                                foreach (var owner in Model.Owners)
                                {
                                    var ownerLabel = string.IsNullOrWhiteSpace(owner.Email) ? owner.Name : $"{owner.Name} ({owner.Email})";
                                    <option value="@ownerLabel" data-owner-id="@owner.OwnerId" data-owner-email="@owner.Email"></option>
                                }
                            }
                        </datalist>
                        <input type="hidden" id="OwnerId" name="OwnerId" value="@Model.OwnerId" />
                        <small class="form-text text-muted">
                            <a href="~/Home/Owner">@Localizer["ManageOwners"]</a>
                        </small>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <input class="form-control" id="OwnerEmailDisplay" type="text" value="@ownerEmail" placeholder="@Localizer["OwnerEmailPlaceholder"]" readonly />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="ConnectorUsageFeePerMinute">@Localizer["ConnectorUsageFeePerMinuteLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <input class="form-control" id="ConnectorUsageFeePerMinute" name="ConnectorUsageFeePerMinute" type="number" step="0.0001" min="0" value="@Model.ConnectorUsageFeePerMinute" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 align-self-center">
                    <div class="form-group">
                        <label class="inline-label" for="UsageFeeAfterChargingEnds">@Localizer["UsageFeeAfterChargingEndsLabel"]</label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="UsageFeeAfterChargingEnds" name="UsageFeeAfterChargingEnds" value="true" @(Model.UsageFeeAfterChargingEnds ? "checked" : "") />
                        <input type="hidden" name="UsageFeeAfterChargingEnds" value="false" />
                        <small class="form-text text-muted">@Localizer["UsageFeeAfterChargingEndsHint"]</small>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 text-danger">
                    @ViewBag.ErrorMsg
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1">
                    &nbsp;
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary"><i class=" fas fa-save"></i>&nbsp;@Localizer[(Model.CurrentId == "@") ? "SaveNew" : "Save"].Value</button>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-secondary" id="btnBack" onclick="history.back()">@Localizer["Back"].Value</button>
                </div>
                @if (Model.CurrentId != "@")
                {
                    <div class="col-sm-2">
                        <button type="button" class="btn btn-warning" id="btnDelete" onclick="DeleteChargepoint()"><i class="fas fa-trash"></i>&nbsp;@Localizer["Delete"].Value</button>
                    </div>
                }
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.ChargePointId))
            {
                <div class="row">
                    <div class="col-sm-1">
                        &nbsp;
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-1">
                        &nbsp;
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <button type="button" class="btn btn-info" id="btnReset" title="@Localizer["TitleReset"]" onclick="ResetChargepoint()"><i class="fas fa-redo"></i> @Localizer["TitleReset"]</button>
                    </div>
                </div>
            }
        </div>
        <input type="hidden" name="action" id="hidAction" value="" />
    }


    @section scripts {
        <script>
            (function () {
                var ownerInput = document.getElementById('OwnerLookup');
                var ownerOptions = document.getElementById('OwnerOptions');
                var ownerId = document.getElementById('OwnerId');
                var ownerEmail = document.getElementById('OwnerEmailDisplay');

                if (!ownerInput || !ownerOptions || !ownerId) {
                    return;
                }

                function syncOwnerSelection() {
                    var match = Array.from(ownerOptions.options).find(function (option) {
                        return option.value === ownerInput.value;
                    });

                    if (match) {
                        ownerId.value = match.dataset.ownerId;
                        if (ownerEmail) {
                            ownerEmail.value = match.dataset.ownerEmail || '';
                        }
                    } else {
                        ownerId.value = '';
                        if (ownerEmail) {
                            ownerEmail.value = '';
                        }
                    }
                }

                ownerInput.addEventListener('input', syncOwnerSelection);
                ownerInput.addEventListener('change', syncOwnerSelection);
                syncOwnerSelection();
            })();
        </script>
        @if (!string.IsNullOrWhiteSpace(Model.ChargePointId))
        {
            <script>
            function ResetChargepoint() {
                var dialog = new BootstrapDialog({
                    title: '@Localizer["TitleReset"]',
                    message: '@string.Format(Localizer["DialogReset"].Value, Model.Name)',
                    spinicon: 'fa fa-spinner fa-fw',
                    buttons: [{
                        id: 'btnDialogReset',
                        label: '@Localizer["TitleReset"]',
                        icon: 'fas fa-redo',
                        autospin: true,
                        action: function (dialogRef) {
                            dialogRef.enableButtons(false);
                            dialogRef.setClosable(false);
                            dialogRef.getModalBody().html('@Localizer["ExecuteReset"]');

                            var xmlhttp = new XMLHttpRequest();
                            xmlhttp.onreadystatechange = function () {
                                if (xmlhttp.readyState == XMLHttpRequest.DONE) {
                                    if (xmlhttp.status == 200) {
                                        dialogRef.getModalBody().html(xmlhttp.responseText);
                                    }
                                    else {
                                        dialogRef.getModalBody().html('@Localizer["ErrorReset"]');
                                    }

                                    dialogRef.setClosable(true);
                                    dialogRef.enableButtons(true);
                                    var $resetButton = dialog.getButton('btnDialogReset');
                                    $resetButton.hide();
                                    var $cancelButton = dialog.getButton('btnDialogCancel');
                                    $cancelButton.text('@Localizer["Close"]');

                                }
                            };
                            xmlhttp.open("GET", "@Html.Raw(Url.Content("~/API/Reset/" + Uri.EscapeDataString(Model.ChargePointId)))", true);
                            xmlhttp.send();
                        }
                    }, {
                        id: 'btnDialogCancel',
                        label: '@Localizer["Cancel"]',
                        action: function (dialogRef) {
                            dialogRef.close();
                        }
                    }]
                });
                dialog.open();
            }
            
            function DeleteChargepoint() {
                var dialog = new BootstrapDialog({
                    title: '@Localizer["TitleDelete"]',
                    message: '@Localizer["DialogDelete"]',
                    //spinicon: 'fa fa-spinner fa-fw',
                    buttons: [{
                        id: 'btnDialogReset',
                        label: '@Localizer["TitleDelete"]',
                        icon: 'fas fa-trash',
                        //autospin: true,
                        action: function (dialogRef) {
                            $("#hidAction").val('Delete');
                            $("form").submit();
                        }
                    }, {
                        id: 'btnDialogCancel',
                        label: '@Localizer["Cancel"]',
                        action: function (dialogRef) {
                            dialogRef.close();
                        }
                    }]
                });
                dialog.open();
            }
            </script>
        }
    }
}
