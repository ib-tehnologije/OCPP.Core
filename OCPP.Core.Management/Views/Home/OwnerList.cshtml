@using Microsoft.AspNetCore.Mvc.Localization
@using OCPP.Core.Database
@model OwnerViewModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Title"];
}
<br />

@if (Model != null)
{
    <table class="table table-striped table-bordered table-sm table-hover" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="th-sm">@Localizer["Name"]</th>
                <th class="th-sm">@Localizer["Email"]</th>
                <th class="th-sm">@Localizer["ChargePoints"]</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Owners != null)
            {
                foreach (Owner owner in Model.Owners)
                {
                    <tr class="table-row" data-href='@Url.Action("Owner", Constants.HomeController, new { id = owner.OwnerId })'>
                        <td>@owner.Name</td>
                        <td>@owner.Email</td>
                        <td>@(owner.ChargePoints?.Count ?? 0)</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <br />
    <a class="btn btn-secondary" href='@Url.Action("Owner", Constants.HomeController, new { id = "@" })'>@Localizer["AddNew"]</a>
}
